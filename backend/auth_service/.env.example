# ============================================
# AUTH SERVICE - Variables de Entorno
# ============================================

# Server
PORT=4001
NODE_ENV=development

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=marketplace_espigon
DB_SCHEMA=auth

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=auth-service
JWT_AUDIENCE=marketplace-espigon

# Rate Limiting
RATE_LIMIT_LOGIN_POINTS=10
RATE_LIMIT_LOGIN_DURATION=60
RATE_LIMIT_LOGIN_BLOCK_DURATION=300

RATE_LIMIT_REGISTER_POINTS=5
RATE_LIMIT_REGISTER_DURATION=60
RATE_LIMIT_REGISTER_BLOCK_DURATION=600

# Redis (Opcional - para blacklist distribuida)
REDIS_URL=redis://localhost:6379

# REST Service URL (para crear usuarios en tablas originales)
REST_SERVICE_URL=http://localhost:3000

# Bcrypt
BCRYPT_SALT_ROUNDS=10
