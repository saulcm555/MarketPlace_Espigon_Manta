{
  "name": "Payment Handler - Stripe Webhooks",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "webhook/payment",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "Webhook Stripe",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [250, 300],
      "webhookId": "payment-webhook"
    },
    {
      "parameters": {
        "jsCode": "// Validar firma del webhook de Stripe (modo desarrollo: sin verificación)\nconst event = $input.first().json;\n\n// En desarrollo, aceptamos sin verificar firma\nreturn {\n  verified: true,\n  mode: 'development',\n  event: event\n};"
      },
      "id": "validate-signature",
      "name": "Validar Firma",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [470, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition-success",
              "leftValue": "={{ $json.event.body.type }}",
              "rightValue": "payment_intent.succeeded",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "if-payment-success",
      "name": "¿Pago Exitoso?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [690, 300]
    },
    {
      "parameters": {
        "jsCode": "// Extraer datos del evento de pago exitoso\nconst event = $input.first().json.event;\nconst body = event.body || event;\nconst paymentIntent = body.data?.object || body.data;\n\nconst orderId = paymentIntent.metadata?.orderId || paymentIntent.metadata?.order_id || 'unknown';\nconst amount = (paymentIntent.amount || 0) / 100;\nconst currency = paymentIntent.currency?.toUpperCase() || 'USD';\nconst paymentId = paymentIntent.id || 'unknown';\n\nreturn {\n  orderId: orderId,\n  paymentId: paymentId,\n  amount: amount,\n  currency: currency,\n  status: 'paid',\n  paidAt: new Date().toISOString(),\n  eventType: body.type,\n  success: true\n};"
      },
      "id": "extract-payment-data",
      "name": "Extraer Datos Pago",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [910, 200]
    },
    {
      "parameters": {
        "method": "PATCH",
        "url": "=http://rest-service:3000/api/orders/{{ $json.orderId }}",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            },
            {
              "name": "X-Internal-Service",
              "value": "n8n-payment-handler"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"status\": \"paid\",\n  \"payment_id\": \"{{ $json.paymentId }}\",\n  \"paid_at\": \"{{ $json.paidAt }}\"\n}",
        "options": {
          "response": {
            "response": {
              "neverError": true
            }
          }
        }
      },
      "id": "update-order",
      "name": "Actualizar Orden",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1130, 200]
    },
    {
      "parameters": {
        "jsCode": "// Extraer datos del evento de pago fallido\nconst event = $input.first().json.event;\nconst body = event.body || event;\nconst paymentIntent = body.data?.object || body.data;\n\nconst orderId = paymentIntent.metadata?.orderId || paymentIntent.metadata?.order_id || 'unknown';\nconst paymentId = paymentIntent.id || 'unknown';\nconst failureMessage = paymentIntent.last_payment_error?.message || 'Pago rechazado';\n\nreturn {\n  orderId: orderId,\n  paymentId: paymentId,\n  status: 'payment_failed',\n  failureMessage: failureMessage,\n  failedAt: new Date().toISOString(),\n  eventType: body.type,\n  success: false\n};"
      },
      "id": "extract-failure-data",
      "name": "Extraer Datos Error",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [910, 400]
    },
    {
      "parameters": {
        "method": "PATCH",
        "url": "=http://rest-service:3000/api/orders/{{ $json.orderId }}",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            },
            {
              "name": "X-Internal-Service",
              "value": "n8n-payment-handler"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"status\": \"payment_failed\",\n  \"failure_reason\": \"{{ $json.failureMessage }}\"\n}",
        "options": {
          "response": {
            "response": {
              "neverError": true
            }
          }
        }
      },
      "id": "update-order-failed",
      "name": "Marcar Orden Fallida",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1130, 400]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"received\": true,\n  \"status\": \"processed\",\n  \"paymentStatus\": \"success\"\n}",
        "options": {}
      },
      "id": "respond-success",
      "name": "Responder OK",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [1350, 200]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"received\": true,\n  \"status\": \"processed\",\n  \"paymentStatus\": \"failed\"\n}",
        "options": {}
      },
      "id": "respond-failed",
      "name": "Responder Fallo",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [1350, 400]
    }
  ],
